<div class="container mt-5">
    <div class="background-image-2"></div>
    <h2 class="mb-4 text-light text-center">ADD Music</h2>

    <!-- Create Form -->
    <form id="createForm" action="" method="post" onsubmit="transformAndSubmit(event)">
        <div class="form-group">
            <label for="name" class="text-light">Title:</label>
            <input type="text" id="name" name="name" class="form-control"  required>
        </div>
        <div class="form-group">
            <label for="url" class="text-light">YouTube URL:</label>
            <input type="text" id="url" name="url" class="form-control" required>
        </div>
        <button type="submit" class="btn bg-dark text-light">ADD</button>
        <button id="clearBtn" type="button" class="btn bg-dark text-light" style="display: none;">Clear</button>
    </form>

    <hr>
</div>
