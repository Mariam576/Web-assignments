<div class="container mt-5">
    <div class="background-image-2"></div>
    <h2 class="mb-4 text-light text-center">Update Music</h2>

    <!-- Update Form -->
    <form id="updateForm" action="" method="post">
        <div class="form-group">
            <label for="name" class="text-light">Name:</label>
            <input type="text" id="name" name="name" class="form-control" value="<%= search.name %>" required>
        </div>
        <div class="form-group">
            <label for="url" class="text-light">URL:</label>
            <input type="text" id="url" name="url" class="form-control" value="<%= search.url %>" required>
        </div>
        <div class="form-group">
            <label for="thumbnail" class="text-light">Thumbnail:</label>
            <input type="text" id="thumbnail" name="thumbnail" class="form-control" value="<%= search.thumbnail %>" required>
        </div>
        <button type="submit" class="btn bg-dark text-light">Update</button>
    </form>
    <hr>
</div>
